<h1><%= @team.city %> <%= @team.name %></h1>

<h2>Coach:</h2>
<%= @team.coach%><br>

<h2>Players:</h2><br>
<% @team.players.each do |player| %>
    <%= link_to "#{player.number}. #{player.name}", team_player_path(@team, player)%><br><br>
<% end %>

<br>
<br>

<%= button_to "Add Player", new_team_player_path(@team), method: "get" %><br><br>

<%= button_to "Edit Team", edit_user_team_path(current_user, @team), method: "get" %><br><br>

<%= form_tag user_team_path(current_user, @team), method: "delete" %>
<%= submit_tag "Delete Team" %><br><br>

<%= button_to "Home", user_path(current_user), method: "get"  %><br><br>

<%= button_to "Log Out", logout_path, method: "get"  %>