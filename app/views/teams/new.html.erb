<%= form_for @team do |f| %>

    <% if flash[:error] %>
        <% flash[:error].each do |error| %>
            <%= error %><br>
        <% end %>
    <% end %>

    <%= f.label :city %>
    <%= f.text_field :city %><br><br>

    <%= f.label :name %>
    <%= f.text_field :name %><br><br>

    <%= f.label :coach %>
    <%= f.text_field :coach %><br><br>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.collection_select :league_id, League.all, :id, :name %><br><br>
    <%= f.submit %>
<% end %>