<%= form_for @user, url: signup_path do |f| %>

    <% if flash[:error] %>
        <% flash[:error].each do |error| %>
            <%= error %><br>
        <% end %>
    <% end %>

    Email: <%= f.text_field :email %></br>
    Password: <%= f.password_field :password %></br>
    Name: <%= f.text_field :name %></br>
    <%= f.submit %>
<% end %>