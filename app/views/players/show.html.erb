<h1><%= @player.number %>. <%= @player.name %></h1>
<h4>Hometown: <%= @player.hometown %></h4>

<br>
<br>
<% if current_user == @player.team.user %>
    <%= link_to "Edit Player", edit_team_player_path(@player.team, @player), class: "button" %><br><br>

    <%= form_tag team_player_path(@player.team, @player), method: "delete" %>
    <%= submit_tag "Delete Player", class: "button" %><br><br>
<%end%>

<%= link_to "Back to Team", user_team_path(@player.team.user, @player.team), class: "button" %><br><br>